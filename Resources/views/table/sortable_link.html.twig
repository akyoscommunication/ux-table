{% set sortDirection = 'asc' %}
{% if key is same as(options.sort) and options.sortDirection is same as('asc') %}
    {% set sortDirection = 'desc' %}
{% endif %}
<a class="ux-table flex items-center gap-2" data-action="live#action" data-live-sort-param="{{ key }}" data-live-action-param="sortColumn" data-live-direction-param="{{ sortDirection }}">{{ title }}
    <div class="w-3">
        <twig:ux:icon name="iconamoon:arrow-up-2" />
        <twig:ux:icon name="iconamoon:arrow-down-2" />
    </div>
</a>
